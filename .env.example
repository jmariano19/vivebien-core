# ============================================================================
# ViveBien Core - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Environment
NODE_ENV=development

# Server
PORT=3000
API_SECRET_KEY=your-secret-key-minimum-16-characters

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://patients.vivebien.io

# Database (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/vivebien

# Redis (Queue)
REDIS_URL=redis://localhost:6379

# AI Services
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# Chatwoot
CHATWOOT_URL=https://chatwoot.example.com
CHATWOOT_API_KEY=xxx
CHATWOOT_ACCOUNT_ID=1

# Worker Configuration
WORKER_CONCURRENCY=50
JOB_TIMEOUT_MS=120000

# Rate Limiting
CLAUDE_RPM_LIMIT=50
WHISPER_RPM_LIMIT=30

# Logging
LOG_LEVEL=info
